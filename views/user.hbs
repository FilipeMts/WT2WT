{{!-- {{userObj}} --}}

<div class="container">
  <div class="row mt-5">
    <div class="col-6 text-center">
      <img class="mx-auto shadow userProfileImg" src="https://lh3.googleusercontent.com/-XbkzMFWVLE0/AAAAAAAAAAI/AAAAAAAAAAA/ACHi3re6kkquCia1vbFpbzQieoGplRr2rw.CMID/s192-c/photo.jpg"> 
    </div>
    <div class="col-6">
      <h1 class="text-center"><span>@</span>{{userObj.username}}</h1>
      <p class="text-center font-italic">Say hello to my little friend!</p> 
      <p>{{userPage}}</p>
      {{!-- <p class="text-center">Following:{{userObj.followingCount}}</p> --}}
      <p class="text-center">{{userObj.followersCount}} followers</p>  
      {{#ifEquals userObj.username user.username}}
        <form action="/sign-out" method="POST">
          <button>Sign Out</button>
        </form>
      {{/ifEquals}}      
      {{#if follow}}
        <form action="/user/{{userObj.username}}/unfollow" method="post" class="text-center">
        <button type="button" class="btn-gradient p-2 rounded-twice">Unfollow</button>
        </form>
      {{else}}
        <form action="/user/{{userObj.username}}/follow" method="post" class="text-center">
        <button type="button" class="btn-gradient p-2 rounded-twice">Follow</button>
        </form>
      {{/if}}  
    </div>
  </div>  
  <div class="mt-5 bg-color-pink">
    <div class="row text-center">
      <div class ="col-md-4 col-sm-4">
        <h6>Alredy watched</h6>
        <ul class="list-unstyled user-lists">
          {{#each userObj.watchedList}}
            <li>{{this}}</li>
          {{/each}}
        </ul>
      </div>
      <div class ="col-md-4 col-sm-4">
        <h6>Want to watch</h6>
        <ul class="list-unstyled user-lists">
          {{#each userObj.towatchList}}
            <li>{{this}}</li>
          {{/each}}
        </ul>
      </div>
      <div class ="col-md-4 col-sm-4 text-center">
        <h6>Currently watching</h6>
        <ul class="list-unstyled user-lists">
          {{#each userObj.watchingList}}
            <li>{{this}}</li>
          {{/each}}
       </ul>
      </div>
    </div>
  </div>

<nav>
  <div class="nav nav-tabs" id="nav-tab" role="tablist">
    <a class="nav-item nav-link active" id="nav-home-tab" data-toggle="tab" href="#nav-home" role="tab" aria-controls="nav-home" aria-selected="true">Approved</a>
    <a class="nav-item nav-link" id="nav-profile-tab" data-toggle="tab" href="#nav-profile" role="tab" aria-controls="nav-profile" aria-selected="false">Watched</a>
    <a class="nav-item nav-link" id="nav-contact-tab" data-toggle="tab" href="#nav-contact" role="tab" aria-controls="nav-contact" aria-selected="false">Want to watch</a>
    <a class="nav-item nav-link" id="nav-contact-tab" data-toggle="tab" href="#nav-contact" role="tab" aria-controls="nav-contact" aria-selected="false">Currently watched</a>
  </div>
</nav>
<div class="tab-content" id="nav-tabContent">
  <div class="tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab">...</div>
  <div class="tab-pane fade" id="nav-profile" role="tabpanel" aria-labelledby="nav-profile-tab">...</div>
  <div class="tab-pane fade" id="nav-contact" role="tabpanel" aria-labelledby="nav-contact-tab">...</div>
</div>

