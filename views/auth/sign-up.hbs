<form action="/sign-up" method="POST" class="col-6 py-3 mx-auto border-2 shadow">
  <div class="form-group">
    <input id="input-username" type="text" class="form-control" name="username" placeholder="Your username" required autofocus/> 
    <small>Username</small>
  </div>
  <div class="form-group">
    <input id='input-email' type="email" class="form-control" name="email" placeholder="Enter email" required/>    
    <small class="text-center">Email</small>
  </div>
  <div class="form-group">
    <input id="input-password" type="password" class="form-control" name="password" placeholder="Enter your password" required/>
    <small class="text-center">Password</small>
  </div>
  <button class="btn btn-primary">Sign Up</button>
  <div class="text-center">
    <a href="/auth/google"><i class="fab fa-google" style="color: red"></i>  Sign Up with Google</a>
  </div>
</form>

